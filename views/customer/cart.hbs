<h3>Cart of {{user}}</h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>

    {{#each carts}}
    <tr>
      <td>{{this.toy.name}}</td>
      <td>{{this.category.name}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      <td> <a href="/customers/delete1cart/{{this._id}}"><input type="button" class="btn btn-primary" value="Delete"></a></td>
    </tr>
   {{/each}}
  </tbody>
</table>

<a href="/"><input type="button" class="btn btn-primary" value="Back to main page"></a>